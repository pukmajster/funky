{
  "name": "funky",
  "version": "0.1.1",
  "description": "Open-source mods manager for Source Engine games",
  "main": "./out/main/index.js",
  "author": "Å½an Pukmajster",
  "homepage": "https://github.com/pukmajster/funky",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "build": {
    "productName": "Funky",
    "appId": "funky",
    "extraResources": {
      "from": "./renderer/src/assets",
      "to": "assets",
      "filter": [
        "**/*"
      ]
    },
    "nsis": {
      "runAfterFinish": false
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2",
    "classnames": "^2.3.2",
    "dexie": "^4.0.7",
    "lucide-svelte": "^0.260.0",
    "nanoid": "^4.0.2",
    "node-vdf": "^0.0.3",
    "vpk": "^0.2.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@floating-ui/dom": "^1.4.5",
    "@skeletonlabs/skeleton": "^1.9.0",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "@tailwindcss/forms": "^0.5.4",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "electron": "^24.6.2",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.25",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "shared": "file:./shared",
    "svelte": "^3.59.2",
    "svelte-check": "^3.4.6",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.2"
  }
}
